  for (var index = 0; index < title.length; index++) {
    let li = createElement('li', {
      display: 'inline-flex',
      justifyContent: 'space-between',
      position: 'relative',
      padding: '5px',
      textAlign: 'center',
      width: '20%',
      verticalAlign: 'middle'
    }, parentEl);
    this.bt = createElement('button', {
