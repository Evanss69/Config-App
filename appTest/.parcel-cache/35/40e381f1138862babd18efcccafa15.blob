function createElement(type, style, parentEl) {
  var el = document.createElement(type);

  for (var attr in style) {
    el.style[attr] = style[attr];
  }

  if (parentEl) parentEl.appendChild(el);
  return el;
}

function createMenuItem(parentEl, title) {
  let cl = createElement('div', {
    display: 'inline-block',
    width: '100%',
    height: '100%',
    border: '1px dotted blue',
    marginRight: '1em',
    marginTop: 0
  }, parentEl);
  let header = createElement('div', {
    color: 'black',
    fontSize: '40px',
    fontWeight: 'bold',
    border: '1px solid green'
  }, cl);
  header.innerHTML = title;
  let content = createElement('div', {
    fontFamily: 'sans-serif'
  }, cl);
  return {
    column: cl,
    header: header,
    content: content
  };
}

function createMenuBar(title, parentEl, onMenuClick) {
